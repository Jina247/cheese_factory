<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogueCheeseFrag"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Search Row -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchCard"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/timber">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search cheese..." />
            </com.google.android.material.card.MaterialCardView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterCard"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/timber">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/filter"
                    app:tint="@color/timber"
                    android:alpha="0.7" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="8dp"
            android:id="@+id/filterSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By milk source"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/timber"
                    android:fontFamily="@font/poppins"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="4dp"/>

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_drop_down_24"
                    android:background="@android:color/transparent"
                    app:tint="@color/terracotta" />
            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/milkChipGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacing="8dp"
                app:lineSpacing="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/cow"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/terracotta"
                    android:fontFamily="@font/poppins"
                    android:text="Cow"
                    app:chipStrokeColor="@color/terracotta"
                    app:chipStrokeWidth="0.5dp"
                    app:chipCornerRadius="24dp"
                    android:textColor="@color/cream" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/buffalo"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    app:chipCornerRadius="24dp"
                    android:fontFamily="@font/poppins"
                    android:text="Buffalo"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/sheep"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Sheep"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/goat"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Goat"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By texture"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/timber"
                    android:fontFamily="@font/poppins"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="4dp"/>

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_drop_down_24"
                    android:background="@android:color/transparent"
                    app:tint="@color/terracotta" />
            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/textureChipGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacing="8dp"
                app:lineSpacing="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/soft"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/terracotta"
                    android:fontFamily="@font/poppins"
                    android:text="Soft"
                    app:chipStrokeColor="@color/terracotta"
                    app:chipStrokeWidth="0.5dp"
                    app:chipCornerRadius="24dp"
                    android:textColor="@color/cream" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/s_soft"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    app:chipCornerRadius="24dp"
                    android:fontFamily="@font/poppins"
                    android:text="Semi-soft"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/s_hard"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Semi-hard"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/hard"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Hard"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/crumbly"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Crumbly"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/spread"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStrokeWidth="0.5dp"
                    android:fontFamily="@font/poppins"
                    app:chipCornerRadius="24dp"
                    android:text="Spreadable"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>


    <!-- RecyclerView fills the rest -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCheeseCatalogView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="5dp"
            tools:listitem="@layout/cheese_item" />

    </LinearLayout>

</FrameLayout>
